# Server
PORT=3000
NODE_ENV=development

# Firebase
FIREBASE_STORAGE_BUCKET=sat-real-estate-website.appspot.com

# Email (SMTP) - Updated for better WebContainer compatibility
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
SMTP_TLS=true

# Fallback email settings (if primary fails)
SMTP_FALLBACK_HOST=smtp.ethereal.email
SMTP_FALLBACK_PORT=587
SMTP_FALLBACK_USER=ethereal.user@ethereal.email
SMTP_FALLBACK_PASS=ethereal.pass

# Admin panel
ADMIN_PANEL_URL=https://admin.satestate.com

# Upload limits
MAX_FILE_SIZE=104857600
MAX_IMAGE_COUNT=10
MAX_VIDEO_COUNT=2

# Security
JWT_SECRET=your-super-secret-jwt-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email configuration
EMAIL_TIMEOUT_MS=15000
EMAIL_MAX_RETRIES=2
EMAIL_RETRY_DELAY_MS=3000